# Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Storage Configuration
STORAGE_TYPE=json
STORAGE_PATH=/var/www/html/data

# Database Configuration (for MySQL - used in docker-compose)
DB_HOST=mysql
DB_PORT=3306
DB_NAME=cluster_status
DB_USER=cluster_user
DB_PASSWORD=cluster_pass
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=cluster_status
MYSQL_USER=cluster_user
MYSQL_PASSWORD=cluster_pass

# API Configuration
API_BASE_URL=/api
API_CACHE_DURATION=60

# Security
# JWT_SECRET=your-secret-key-here
# SESSION_SECRET=your-session-secret

# Logging
LOG_LEVEL=info
LOG_PATH=/var/log/cluster-status

# Data Collection
COLLECTION_INTERVAL=3600
METRICS_RETENTION_DAYS=90

# External Services (if any)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=your-smtp-password

# Development
DEBUG=false
ENVIRONMENT=production
